{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es5",
        "lib": ["es2015"],
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "incremental": true,
        "strict": true,
        "downlevelIteration": true,
        "jsx": "react",
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"],
    "exclude": ["src/**/*.deno.ts", "src/**/*.deno.tsx"]
}
